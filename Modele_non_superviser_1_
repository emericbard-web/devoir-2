        "# Ici on applique DBSCAN pour détecter les groupes et les points anormaux.\n",
        "db = DBSCAN(eps=1.5, min_samples=10)\n",
        "clusters_db = db.fit_predict(X_scaled)\n",
        "\n",
        "pca_df[\"cluster_dbscan\"] = clusters_db\n",
        "\n",
        "labels = clusters_db[clusters_db != -1]\n",
        "\n",
        "if len(set(labels)) > 1:\n",
        "    sil_db = silhouette_score(X_scaled[clusters_db != -1], labels)\n",
        "else:\n",
        "    sil_db = \"Impossible à calculer\"\n",
        "sil_db\n"
