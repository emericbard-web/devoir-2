        "# Jen entraîne K-Means avec k=3 (ou la valeur trouv avec la méthode du coude).\n",
        "kmeans = KMeans(n_clusters=3, random_state=42)\n",
        "clusters_km = kmeans.fit_predict(X_scaled)\n",
        "\n",
        "pca_df[\"cluster_kmeans\"] = clusters_km\n"
