      "cell_type": "code",
      "source": [
        "# ici jutilise la méthode du coude pour déterminer le nombre optimal de clusters pour K-Means.\n",
        "inertia = []\n",
        "K = range(2, 10)\n",
        "\n",
        "for k in K:\n",
        "    km = KMeans(n_clusters=k, random_state=42)\n",
        "    km.fit(X_scaled)\n",
        "    inertia.append(km.inertia_)\n",
        "\n",
        "plt.plot(K, inertia, marker='o')\n",
        "plt.xlabel(\"k\")\n",
        "plt.ylabel(\"Inertia\")\n",
        "plt.title(\"Méthode du coude - KMeans\")\n",
        "plt.show()\n"
      ],
      "metadata": {
        "id": "FSpUybvXBZys"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
